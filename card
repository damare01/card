        body {
            font-family: 'Cinzel', serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #1e1e2e;
            color: #d4af37;
            animation: background-glow 5s infinite alternate;
            overflow-y: auto;
            overflow-x: hidden;
            position: relative;
        }

        @keyframes background-glow {
            0% { background-color: #1e1e2e; }
            100% { background-color: #2c2c3e; }
        }

        .card-container {
            perspective: 1500px;
            margin-bottom: 20px;
            animation: fade-in 2s ease-in-out;
        }

        @keyframes fade-in {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        .card {
            width: 220px;
            height: 320px;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.8s cubic-bezier(0.4, 0.2, 0.2, 1);
            cursor: pointer;
            border: 3px solid #d4af37;
            border-radius: 12px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.6), 0 6px 6px rgba(0, 0, 0, 0.1);
        }

        .card.is-flipped {
            transform: rotateY(180deg);
        }

        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 12px;
            overflow: hidden;
        }

        .card-back iframe,
        .card-front iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .card-front {
            transform: rotateY(180deg);
        }

        .card-info {
            text-align: center;
            display: none;
            max-width: 320px;
            background-color: rgba(30, 30, 46, 0.9);
            border: 2px solid #d4af37;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
            animation: slide-up 0.7s ease-out;
        }

        .card-info.visible {
            display: block;
        }

        @keyframes slide-up {
            0% { transform: translateY(30px); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }

        .card-info h2 {
            margin: 0;
            font-size: 24px;
            color: #ffdd93;
        }

        .card-info p {
            margin: 8px 0;
            font-size: 16px;
        }

