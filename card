    <div class="card-container">
        <div class="card" id="gameCard">
            <div class="card-face card-back">
                <iframe id="backImage" allowfullscreen></iframe>
            </div>
            <div class="card-face card-front">
                <iframe id="frontImage" allowfullscreen></iframe>
            </div>
        </div>
    </div>

    <div class="card-info" id="cardInfo">
        <h2>Edward Jenner</h2>
        <p><strong>Lifetime:</strong> 1749–1823</p>
        <p><strong>Title:</strong> Father of Immunology</p>
        <p><strong>Achievements:</strong> Jenner developed the first successful vaccine, using material from cowpox sores to immunize against smallpox. In 1796, he performed the first vaccination, demonstrating that exposure to cowpox provided immunity to smallpox. His groundbreaking work provided a scientific basis for immunization and disease prevention.</p>
        <p><strong>Legacy:</strong> Jenner’s work led to the global eradication of smallpox and laid the foundation for modern vaccines, revolutionizing the fight against infectious diseases.</p>
    </div>

    <script>
        function getGoogleDrivePreviewUrl(url) {
            const regex = /\/file\/d\/([^/]+)\//;
            const match = url.match(regex);
            return match ? `https://drive.google.com/file/d/${match[1]}/preview` : url;
        }

        // Set Google Drive images
        const backImageUrl = "https://drive.google.com/file/d/1QZhYr7GPXZO1Jmz_9_NxDQWGuIINSvfj/view?usp=sharing";
        const frontImageUrl = "https://drive.google.com/file/d/FRONT_IMAGE_FILE_ID/view?usp=sharing";

        document.getElementById("backImage").src = getGoogleDrivePreviewUrl(backImageUrl);
        document.getElementById("frontImage").src = getGoogleDrivePreviewUrl(frontImageUrl);

        // Flip effect
        const card = document.getElementById('gameCard');
        const cardInfo = document.getElementById('cardInfo');

        card.addEventListener('click', () => {
            card.classList.toggle('is-flipped');
            cardInfo.classList.toggle('visible');
        });
    </script>

